#4.1
pizzas = ['white_pizza', 'blue_pizza', 'red_pizza']
for pizza in pizzas:
    print(pizza)
for pizza in pizzas:
    print("I like " + pizza)
print("I really love pizza")


#4.2
animals = ['dog', 'cat', 'rat']
for animal in animals:
    print(animal)
for animal in animals:
    print('A ' + animal + ' would make a great pet')

print("Any of these animals would make a great pet!")
